<div  class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <%= render "shared/sidenav" %>

    </div>
    <div class="col-sm-10">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">选课提示</h3>
        </div>
        
        
        <div class="panel-body" style="min-height: 450px">
          <table class="table table-striped table-hover">
            <thead>
		        <tr>
		           <th>类别</th>
		           <th>公共必修课程及学分</th>
		           <th>公共必修课学分要求</th>
		           <th>专业学位课学分要求</th>
		           <th>总学分要求</th>
		    	 </tr>
		   	   </thead>
		   	   <tbody>
		   	   	 
           <tr>
              <th>学习要求</th>
              <td>
                <div>中国特色社会主义理论与实践研究（2学分）</div>
                <div>自然辩证法概论（1学分）</div>
                <div>硕士学位英语</div>
                <div>信息检索（1学分）</div>
                <div>知识产权</div>
                <div>工程伦理（0.5学分）</div>
              </td>
              <td>&gt;=2学分</td>
              <td>&gt;=12学分</td>
              <td>&gt;=30学分</td>
           </tr>
          <tr>
		   			<th>选课情况</th>
		   			<td>
		   			  <% @course.each do |course| %>
		   			  <% if course.course_type=="公共必修课"; %><div><%= course.name %></div><% end %> 
		   				<% end %>
		   			</td>
		   			<td>
		   			  <% sum=0.0 %>
		   			  <% @course.each do |course| %>
		   			  <% if course.course_type=="公共必修课"; %><% sum += (course.credit[-3..-1].to_f) %><% end %>
		   			  <% end %>
		   			  <div><%= sum.to_s + "学分"  %></div>
		   			</td>
		   			<td>
		   			  <% sum=0.0 %>
		   			  <% @course.each do |course| %>
		   			  <% if course.course_type[0..1]=="专业" ||course.course_type[0..1]== "一级" ; %><% sum += (course.credit[-3..-1].to_f) %><% end %>
		   			  <% end %>
		   			  <div><%= sum.to_s + "学分"  %></div>
		   			</td>
		   			<td>
		   			  <% sum=0.0 %>
		   			  <% @course.each do |course| %>
		   			    <% sum += (course.credit[-3..-1].to_f) %>
		   			  <% end %>
		   			  <div><%= sum.to_s + "学分"  %></div>
		   			</td>
		   		</tr>
		   		<tr>
		   			<th>获取学分</th>
		   			<td>
		   			  <% @grade.each do |grade| %>
		   			  <% if grade.grade != '' && grade.grade.to_f >= 60 ; %><div><%= grade.course.name %></div><% end %> 
		   				<% end %>
		   			</td>
		   			<td>
		   				<% sum=0.0 %>
		   			  <% @grade.each do |grade| %>
		   			  <% if grade.grade != '' && grade.grade.to_f >= 60 && grade.course.course_type=="公共必修课"; %><% sum += (grade.course.credit[-3..-1].to_f) %><% end %> 
		   				<% end %>
		   				<div><%= sum.to_s + "学分"  %></div>
		   			</td>
		   			<td>
		   				<% sum=0.0 %>
		   			  <% @grade.each do |grade| %>
		   			  <% if grade.grade != '' && grade.grade.to_f >= 60 && (grade.course.course_type[0..1]=="专业" ||grade.course.course_type[0..1]== "一级"); %><% sum += (grade.course.credit[-3..-1].to_f) %><% end %> 
		   				<% end %>
		   				<div><%= sum.to_s + "学分"  %></div>
		   			</td>
		   			<td>
		   				<% sum=0.0 %>
		   			  <% @grade.each do |grade| %>
		   			  <% if grade.grade != '' && grade.grade.to_f >= 60; %><% sum += (grade.course.credit[-3..-1].to_f) %><% end %> 
		   				<% end %>
		   				<div><%= sum.to_s + "学分"  %></div>
		   			</td>
		   		</tr>
           </tbody>
          </table>
          <%= will_paginate @course %>
        </div>
      </div>
    </div>
  </div>
</div>